window-rule {
    geometry-corner-radius 16
    clip-to-geometry true
}

recent-windows {
  highlight {
    corner-radius 16
  }
}

cursor {
  xcursor-theme "Bibata-Modern-Ice"
  xcursor-size 24
}

layout {
  gaps 16

  shadow {
    on
    softness 5
    spread 0
    offset x=10 y=10
    color "#1A1A1ADD"
    inactive-color "#1A1A1ADD"
  }

  tab-indicator {
    width 4
    length total-proportion=0.7
    position "bottom"
  }

  border {
    on
    width 6
  }
}
